# =============================================================================
# Mobius OS Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL (authoritative system of record)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mobius
POSTGRES_USER=mobius_user
POSTGRES_PASSWORD=your_postgres_password_here

# Full connection URL (alternative to individual params above)
# DATABASE_URL=postgresql://mobius_user:password@localhost:5432/mobius

# -----------------------------------------------------------------------------
# Google Cloud / Firestore (realtime projection layer)
# -----------------------------------------------------------------------------
# Path to your GCP service account JSON key file
GCP_CREDENTIALS_PATH=./gcp-credentials.json

# GCP project ID (required for Firestore)
GCP_PROJECT_ID=your-gcp-project-id

# Firestore database (leave empty for default)
FIRESTORE_DATABASE=

# -----------------------------------------------------------------------------
# Application settings
# -----------------------------------------------------------------------------
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-this-to-a-random-secret-key

# -----------------------------------------------------------------------------
# Feature flags
# -----------------------------------------------------------------------------
# Set to "true" to enable Firestore (requires GCP credentials)
# Set to "false" to run in Postgres-only mode (no realtime projections)
ENABLE_FIRESTORE=false
