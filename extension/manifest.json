{
  "manifest_version": 3,
  "name": "Mobius OS",
  "version": "1.0.0",
  "description": "AI-native, context-aware browser extension bridging financial and patient engagement with clinical care",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "Mobius OS",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
